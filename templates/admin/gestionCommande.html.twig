{% extends "base.html.twig" %}

{% block title %}Gestion Commande{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Gestion des commandes</h1>


    <div class="container">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>ID Commande</th>
                    <th>Véhicule</th>
                    <th>ID Membre</th>
                    <th>date et heure de départ</th>
                    <th>date et heure de fin</th>
                    <th>Prix Total</th>
                    <th>Date d'enregistrement</th>
                </tr>
            </thead>
            <tbody>
                {% for commande in commandes %}
                    <tr>
                        <td>{{ commande.idcommande }}</td>
                        <td>{{ commande.idvehicule.titre }}</td>
                        <td>{{ commande.membre.id }}</td>
                        <td>{{ commande.dateheuredepart|date('d/m/y à H:i:s') }}</td>
                        <td>{{ commande.dateheurefin|date_modify('+1 day')|date('d/m/y à H:i:s') }}</td>
                        <td>{{ commande.prixtotal }}</td>
                        <td>{{ commande.dateenregistrement|date('d/m/y à H:i:s') }}</td>

                    </tr>
                    
                {% endfor %}
            </tbody>
        
        </table>
    
    
    </div>
{% endblock %}