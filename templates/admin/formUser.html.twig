{% extends "base.html.twig" %}

{% block title %}
    {% if editMode %}
    Modifier Membre
        {% else %}
            Ajouter Membre
            
    {% endif %}

{% endblock %}

{% block body %}
    <h1 class="text-center my-4">
    {% if editMode %}
    Modifier Membre
        {% else %}
            Ajouter Membre
            
    {% endif %}
    </h1>

    <div class="container">
        
        {{ form_start(form,{
            attr: {
                novalidate: 'novalidate'
            }
        }) }}
        
            {{ form_row(form.pseudo, {
                label: 'Pseudo',
                attr: {
                    placeholder: "Pseudo"
                }
            }) }}

            {{ form_row(form.password, {
                label: 'Mot de passe'
            }) }}

            {{ form_row(form.nom, {
                label: 'Nom'
            }) }}

            {{ form_row(form.prenom,{
                label: 'Prénom'
            }) }}

            {{ form_row(form.email,{
                label: 'Email'
            }) }}

            {{ form_row(form.civilite,{
                label: 'Civilité : Taper M pour Masculin ou F pour Feminin'
            }) }}





            <button type="submit" class="btn btn-primary">Enregistrer</button>


        {{ form_end(form) }}
        
    </div>
{% endblock %}